{
  "name": "code-automata",
  "version": "2.2.3",
  "description": "Autonomous AI agents for developers - AI-driven development",
  "author": {
    "name": "Code-Automata",
    "email": "kanvmukulxxsharma@gmail.com"
  },
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "next:dev": "next dev",
    "next:build": "next build",
    "icon:build": "node scripts/build-mac-icons.js && node scripts/build-dock-icon.js",
    "icon:mac": "node scripts/build-mac-icons.js",
    "start": "yarn icon:build && node scripts/dev.js",
    "build": "node scripts/build-mac-icons.js && node scripts/build-icons.js && node scripts/prepare-build.js && electron-builder --publish never",
    "build:mac": "node scripts/build-mac-icons.js && node scripts/build-icons.js && node scripts/prepare-build.js && electron-builder --mac --publish never",
    "build:mac:x64": "node scripts/build-mac-icons.js && node scripts/build-icons.js && node scripts/prepare-build.js && electron-builder --mac --x64 --publish never",
    "build:mac:arm64": "node scripts/build-mac-icons.js && node scripts/build-icons.js && node scripts/prepare-build.js && electron-builder --mac --arm64 --publish never",
    "build:linux": "node scripts/build-mac-icons.js && node scripts/build-icons.js && node scripts/prepare-build.js && electron-builder --linux --publish never",
    "build:win": "node scripts/build-mac-icons.js && node scripts/build-icons.js && node scripts/prepare-build.js && electron-builder --win --publish never",
    "build:all": "node scripts/build-mac-icons.js && node scripts/build-icons.js && node scripts/prepare-build.js && electron-builder -mwl --publish never",
    "build:all:rosetta": "arch -x86_64 zsh -c 'node scripts/build-mac-icons.js && node scripts/build-icons.js && node scripts/prepare-build.js && electron-builder -mwl --publish never'",
    "upload": "gh release upload",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@sourcegraph/amp-sdk": "^0.1.0-20260125081125-g5070a1e",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "^15.1.6",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.19.29",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "^15.1.6",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5",
    "vitest": "^2.1.0",
    "wait-on": "^8.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,mjs}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.code-automata.app",
    "productName": "Code-Automata",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "icon": "public/code-automata-dark.png",
    "asar": true,
    "npmRebuild": false,
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "flatpak"
      ],
      "category": "Development",
      "icon": "build/icons"
    },
    "flatpak": {
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "25.08",
      "sdk": "org.freedesktop.Sdk",
      "base": "org.electronjs.Electron2.BaseApp",
      "baseVersion": "25.08",
      "finishArgs": [
        "--socket=wayland",
        "--socket=x11",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--filesystem=home",
        "--talk-name=org.freedesktop.Notifications"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "asarUnpack": [
      ".next/standalone/**/*"
    ],
    "afterPack": "./scripts/after-pack.js",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      ".next/standalone/**/*",
      "!**/*.map",
      "!.next/standalone/**/0*.png",
      "!.next/standalone/**/1*.png"
    ],
    "extraResources": []
  }
}
